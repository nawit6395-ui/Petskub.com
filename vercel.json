{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/share/article", "destination": "/api/article-share" },
    {
      "source": "/share/article/:id",
      "destination": "/api/article-share?id=:id"
    },
    { "source": "/share/pet", "destination": "/api/pet-share" },
    { "source": "/share/pet/:id", "destination": "/api/pet-share?id=:id" },
    { "source": "/auth/:path*", "destination": "/index.html" },
    { "source": "/:path*", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
