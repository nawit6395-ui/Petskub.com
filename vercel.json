{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/share/article", "dest": "/api/article-share" },
    { "src": "/share/article/(.*)", "dest": "/api/article-share?id=$1" },
    { "src": "/share/pet", "dest": "/api/pet-share" },
    { "src": "/share/pet/(.*)", "dest": "/api/pet-share?id=$1" },
    { "src": "/auth/(.*)", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
